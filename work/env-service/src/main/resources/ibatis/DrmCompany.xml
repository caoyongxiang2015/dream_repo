	<!-- 新增记录 -->
	<insert id="save" parameterClass="drmCompanyEntity">
	    <![CDATA[
	        INSERT INTO DRM_COMPANY (
	        	id, 
	        	user_id, 
	        	company_index, 
	        	company_name, 
	        	company_shotname, 
	        	dept_name, 
	        	postname, 
	        	job_duration, 
	        	provide_content, 
	        	word_count, 
	        	qq, 
	        	weixin, 
	        	phone, 
	        	email, 
	        	zhanneixin, 
	        	ptshow, 
	        	price, 
	        	faceprice, 
	        	remark, 
	        	version, 
	        	disabled, 
	        	create_userid, 
	        	create_time, 
	        	update_userid, 
	        	update_time
	        ) VALUES (
	        	#id#, 
	        	#userId#, 
	        	#companyIndex#, 
	        	#companyName#, 
	        	#companyShotname#, 
	        	#deptName#, 
	        	#postname#, 
	        	#jobDuration#, 
	        	#provideContent#, 
	        	#wordCount#, 
	        	#qq#, 
	        	#weixin#, 
	        	#phone#, 
	        	#email#, 
	        	#zhanneixin#, 
	        	#ptshow#, 
	        	#price#, 
	        	#faceprice#, 
	        	#remark#, 
	        	#version#, 
	        	#disabled#, 
	        	#createUserid#, 
	        	#createTime#, 
	        	#updateUserid#, 
	        	#updateTime#
	        )
	    ]]>
		<selectKey resultClass="java.lang.Integer" type="post"
			keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>


	<!-- 通过ID修改 -->
	<update id="update" parameterClass="drmCompanyEntity">
	    <![CDATA[
	        UPDATE DRM_COMPANY SET
		        user_id = #userId#, 
		        company_index = #companyIndex#, 
		        company_name = #companyName#, 
		        company_shotname = #companyShotname#, 
		        dept_name = #deptName#, 
		        postname = #postname#, 
		        job_duration = #jobDuration#, 
		        provide_content = #provideContent#, 
		        word_count = #wordCount#, 
		        qq = #qq#, 
		        weixin = #weixin#, 
		        phone = #phone#, 
		        email = #email#, 
		        zhanneixin = #zhanneixin#, 
		        ptshow = #ptshow#, 
		        price = #price#, 
		        faceprice = #faceprice#, 
		        remark = #remark#, 
		        version = #version#, 
		        disabled = #disabled#, 
		        create_userid = #createUserid#, 
		        create_time = #createTime#, 
		        update_userid = #updateUserid#, 
		        update_time = #updateTime#
	        WHERE 
		        id = #id#
	    ]]>
	</update>

	<!-- 通过ID删除 -->
	<delete id="delete">
	    <![CDATA[
	        DELETE FROM DRM_COMPANY WHERE
	        id = #id#
	    ]]>
	</delete>

	<!-- 通过ID列表批量删除 -->
	<delete id="deleteByIds" parameterClass="java.lang.String">
	    <![CDATA[
	        DELETE FROM DRM_COMPANY WHERE
	        id IN ($ids$)
	    ]]>
	</delete>

	<!-- 通过ID查询 -->
	<select id="getById" resultMap="drmCompany">
		SELECT
		<include refid="drmCompany.columns" />
	    <![CDATA[
	        FROM DRM_COMPANY 
	        WHERE 
		        id = #id#
	    ]]>
	</select>

