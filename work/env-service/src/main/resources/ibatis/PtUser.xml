	<!-- 新增记录 -->
	<insert id="save" parameterClass="ptUserEntity">
	    <![CDATA[
	        INSERT INTO PT_USER (
	        	login_id, 
	        	pwd, 
	        	nickname, 
	        	lastname, 
	        	realname, 
	        	sex, 
	        	province, 
	        	city, 
	        	county, 
	        	signature, 
	        	idcard, 
	        	idcardfront, 
	        	idcardback, 
	        	percent, 
	        	workyears, 
	        	isoffline, 
	        	offlineprice, 
	        	qq, 
	        	email, 
	        	weixin, 
	        	phone, 
	        	cur_company_id, 
	        	cur_company_name, 
	        	cur_dept_name, 
	        	money_count, 
	        	version, 
	        	disabled, 
	        	create_userid, 
	        	create_time, 
	        	update_userid, 
	        	update_time
	        ) VALUES (
	        	#loginId#, 
	        	#pwd#, 
	        	#nickname#, 
	        	#lastname#, 
	        	#realname#, 
	        	#sex#, 
	        	#province#, 
	        	#city#, 
	        	#county#, 
	        	#signature#, 
	        	#idcard#, 
	        	#idcardfront#, 
	        	#idcardback#, 
	        	#percent#, 
	        	#workyears#, 
	        	#isoffline#, 
	        	#offlineprice#, 
	        	#qq#, 
	        	#email#, 
	        	#weixin#, 
	        	#phone#, 
	        	#curCompanyId#, 
	        	#curCompanyName#, 
	        	#curDeptName#, 
	        	#moneyCount#, 
	        	#version#, 
	        	0, 
	        	#createUserid#, 
	        	now(), 
	        	#updateUserid#, 
	        	#updateTime#
	        )
	    ]]>
		<selectKey resultClass="java.lang.Integer" type="post"
			keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>


	<!-- 通过ID修改 -->
	<update id="update" parameterClass="ptUserEntity">
	    <![CDATA[
	        UPDATE PT_USER SET
		        login_id = #loginId#, 
		        pwd = #pwd#, 
		        nickname = #nickname#, 
		        lastname = #lastname#, 
		        realname = #realname#, 
		        sex = #sex#, 
		        province = #province#, 
		        city = #city#, 
		        county = #county#, 
		        signature = #signature#, 
		        idcard = #idcard#, 
		        idcardfront = #idcardfront#, 
		        idcardback = #idcardback#, 
		        percent = #percent#, 
		        workyears = #workyears#, 
		        isoffline = #isoffline#, 
		        offlineprice = #offlineprice#, 
		        qq = #qq#, 
		        email = #email#, 
		        weixin = #weixin#, 
		        phone = #phone#, 
		        cur_company_id = #curCompanyId#, 
		        cur_company_name = #curCompanyName#, 
		        cur_dept_name = #curDeptName#, 
		        money_count = #moneyCount#, 
		        version = #version#, 
		        disabled = #disabled#, 
		        create_userid = #createUserid#, 
		        create_time = #createTime#, 
		        update_userid = #updateUserid#, 
		        update_time = #updateTime#
	        WHERE 
		        id = #id#
	    ]]>
	</update>

	<!-- 通过ID删除 -->
	<delete id="delete">
	    <![CDATA[
	        DELETE FROM PT_USER WHERE
	        id = #id#
	    ]]>
	</delete>

	<!-- 通过ID列表批量删除 -->
	<delete id="deleteByIds" parameterClass="java.lang.String">
	    <![CDATA[
	        DELETE FROM PT_USER WHERE
	        id IN ($ids$)
	    ]]>
	</delete>

	<!-- 通过ID查询 -->
	<select id="getById" resultMap="ptUser">
		SELECT
		<include refid="ptUser.columns" />
	    <![CDATA[
	        FROM PT_USER 
	        WHERE 
		        id = #id#
	    ]]>
	</select>

