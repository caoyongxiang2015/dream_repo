	<sql id="ptUser.queryByParams">
		<dynamic prepend="WHERE">
			<isNotNull property="entity">
				<isNotEmpty prepend="OR" property="entity.loginId">
		            <![CDATA[
					login_id = #entity.loginId#
		            ]]>
				</isNotEmpty>
				<isNotEmpty prepend="OR" property="entity.phone">
